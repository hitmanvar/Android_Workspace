<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductListShow">

    <ImageView
        android:id="@+id/butterimg"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/amulbutter"/>
    <TextView
        android:id="@+id/txtbutter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Amul Butter"
        android:textSize="25dp"
        android:layout_below="@+id/butterimg"
        android:gravity="center"
        />

    <ImageView
        android:id="@+id/cheeseimg"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/amulcheese"
        android:layout_below="@id/txtbutter"
        />
    <TextView
        android:id="@+id/txtcheese"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Amul Cheese"
        android:textSize="25dp"
        android:layout_below="@+id/cheeseimg"
        android:gravity="center"
        />

    <ImageView
        android:id="@+id/chocoimg"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/amulchocolate"
        android:layout_below="@id/txtcheese"
        />
    <TextView
        android:id="@+id/txtchoco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Amul Chocolate"
        android:textSize="25dp"
        android:layout_below="@+id/chocoimg"
        android:gravity="center"
        />

    <ImageView
        android:id="@+id/coolimg"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/amulcool"
        android:layout_below="@id/txtchoco"
        />
    <TextView
        android:id="@+id/txtcool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Amul Cool"
        android:textSize="25dp"
        android:layout_below="@+id/coolimg"
        android:gravity="center"
        />

    <ImageView
        android:id="@+id/iceimg"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/amulicecream"
        android:layout_below="@id/txtcool"
        />
    <TextView
        android:id="@+id/txtice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Amul IceCream"
        android:textSize="25dp"
        android:layout_below="@+id/iceimg"
        android:gravity="center"
        />

    <ImageView
        android:id="@+id/lassimg"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/amullassi"
        android:layout_below="@id/txtice"
        />
    <TextView
        android:id="@+id/txtlassi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Amul lassi"
        android:textSize="25dp"
        android:layout_below="@+id/lassimg"
        android:gravity="center"
        />

    <ImageView
        android:id="@+id/milkimg"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/amulmilk"
        android:layout_below="@id/txtlassi"
        />
    <TextView
        android:id="@+id/txtmilk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Amul milk"
        android:textSize="25dp"
        android:layout_below="@+id/milkimg"
        android:gravity="center"
        />

</RelativeLayout>
</ScrollView>
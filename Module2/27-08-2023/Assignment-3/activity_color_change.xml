<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
    android:id="@+id/L1"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        tools:context=".ColorChange">

       <Button
           android:id="@+id/btnRed"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerInParent="true"
           android:text="MAGENTA"
           />
    <Button
        android:id="@+id/btngreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="CYAN"
        android:layout_below="@id/btnRed"
        />
    <Button
        android:id="@+id/btnBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="GRAY"
        android:layout_below="@id/btngreen"
        />


    <Button
        android:id="@+id/btnChnge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="CHANGE SCREEN"
        android:layout_below="@id/btnBlue"
        />


    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="LOGIN PAGE"
        android:layout_below="@id/btnChnge"
        />


    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="REGISTRATION PAGE"
        android:layout_below="@id/btnLogin"
        />

    <Button
        android:id="@+id/btnLifeCycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="ACTIVITY LIFECYCLE DEMO"
        android:layout_below="@id/btnRegister"
        />

    <Button
        android:id="@+id/btnAtoF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="A TO F"
        android:layout_below="@id/btnLifeCycle"
        />

    <FrameLayout
        android:id="@+id/frmid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnAtoF"/>
    </RelativeLayout>
